<% provide(:title, 'All staff') %>
<div class="container">
	<div class="breadcumb">
  <li><%=link_to "Home",root_path%> | staff</li>
</div>
		<% @users.where(:teacher =>true).each do |user| %>
			<div class="center">
			<h4><%=user.name+" "+user.surname%></h4>
				<%=image_tag user.avatar.url,id:"avatar" %>
				<%@s=Subject.where(:user_id=>user.id).first.name%>
				<p>Teacher of <%=@s%> </p>
			</div>
			<%end%>
</div>

