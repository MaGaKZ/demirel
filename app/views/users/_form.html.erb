  <%javascript 'dinamic_groups'%>
  <%= form_for (@user) do |f| %>
  <%= render 'shared/error_messages' %>
  <div class="form-group">
    <%= f.text_field :name, :placeholder => "Name" %>
    
  </div>
  <div class="form-group">
    <%= f.text_field :surname, :placeholder => "Surname" %>
  </div>
  <div class="form-group">
    <%= f.text_field :email, :placeholder => "Email" %>
    <i class="fa icon-envelope"></i>
  </div>
  <div class="form-group">
    <%= f.password_field :password, :placeholder => "Password" %>
    <i class="icon-lock"></i>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, :placeholder => "Confirmation" %>
    <i class="icon-lock"></i>
  </div>
  
  <%= f.collection_select(:group_id,Group.all,:id,:name,{:prompt => "Select Group"}, {:include_blank => true})%><br>
  <%= f.file_field :avatar,:id=>"uploadImage",:onchange=>"PreviewImage();"%>
  <br>
  <%= f.submit " Submit", class: "btn" %>
  <% end %>
<script type="text/javascript">
  function PreviewImage() {
    var oFReader = new FileReader();
    oFReader.readAsDataURL(document.getElementById("uploadImage").files[0]);

    oFReader.onload = function(oFREvent) {
      document.getElementById("uploadPreview").src = oFREvent.target.result;
    };
  };
</script>