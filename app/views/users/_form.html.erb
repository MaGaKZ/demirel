<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<%javascript 'dinamic_groups'%>
    <%= form_for (@user) do |f| %>
<%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>
    
      <%= f.label :surname %>
      <%= f.text_field :surname %>
    
      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>
    
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <label for="person_group_id">Group:</label>
      <%= f.collection_select(:group_id,Group.all,:id,:name,{:prompt => "Select Group"}, {:include_blank => true})%>
      <%= f.file_field :avatar%>
      <br>
    <% if current_user.admin?%>
      <%= f.submit "Create account", class: "btn btn-large btn-primary" %>
    <% end %>
 <% end %>  