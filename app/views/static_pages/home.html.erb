    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
    <div class="active item"><%= image_tag("sdcollege.jpg", :alt => "slider image 1") %>
      <div class="slidetext">
