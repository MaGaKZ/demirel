<div class="container">
  <% if signed_in? %>
  <% provide(:title, 'Home') %>
  <div class="breadcumb">
    <li><%=link_to "Home",root_path%> | homework page</li>
  </div>
  <div class="subjects">
    <div class="row">
      <div class="row">
        <div class="span6 hey">
          <h3>My Subjects</h3>
        </div>
        <div class="span6 hey">
          <h3>Homeworks</h3>
        </div>
      </div>
      <div class="span4">
        <%if !current_user.teacher?%>
        <% current_user.group.subjects.each do |s|%>
        
        <div class="list-group">
          <%= link_to subject_assignments_path(s), class: "list-group-item",remote: true do %>
          <div class="subname">
            <div class="cursor" style="cursor: pointer;" onclick="window.location='<%=subject_path(s)%>';">
            <%=s.name%></div>
          </div>
          <%end%>
        </div>
        <%end%>
        <%else%>
        <% Subject.where(:user_id=>current_user.id).each do |s|%>
        
        <div class="list-group">
          <%= link_to subject_assignments_path(s), class: "list-group-item",remote: true do %>
          <div class="subname">
            <div class="cursor" style="cursor: pointer;" onclick="window.location='<%=subject_path(s)%>';">
            <%=s.name%></div>
          </div>
          <%end%>
        </div>
        <%end%>
        
        <%end%>
      </div>
      <div class="span8">
        <div class="renders">
        </div>
      </div>
    </div>
  </div>
</div>
<%else%>
<div class="breadcumb">
  <li><%=link_to "Home",root_path%> | main page</li>
  <h3>Suleyman Demirel College</h3>
</div>
