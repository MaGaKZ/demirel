<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @subject.name %>
</p>

<p>
  <strong>Group:</strong>
  <%= @subject.group_id %>
</p>
<h3>Teacher:</h3>
<p>
  <%= gravatar_for @user %>
  <%=link_to @user.name,@user%>
</p>
<%= link_to 'Edit', edit_subject_path(@subject) %> |
<%= link_to 'Back', subjects_path %>
<br/>
<h1>Listing assignments</h1>
<br>
  <%= link_to "Marks",subject_marks_path(@subject)%>
<table>
  <thead>
    <tr>
      <th>Content</th>
     
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= link_to assignment.content,assignment_path(assignment) %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assignment', new_subject_assignment_path(@subject) %>


