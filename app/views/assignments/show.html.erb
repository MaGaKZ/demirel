<p id="notice"><%= notice %></p>
<h3>Homeworks</h3>

 
  <%= @assignment.content %>


<h1>Listing comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%=link_to comment.content, comment %></td>
        <td><%= User.find(comment.user_id).name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_assignment_comment_path(@assignment) %>
